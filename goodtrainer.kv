#:include nav.kv
<WindowManager>:
    LoginScreen:
    Nav:
<LoginScreen>:
    username:emailw
    password:passw
    name: 'LoginScreen'
    BoxLayout:
        spacing: 30
        padding: 30
        
        orientation: 'vertical'
        Image:
            source:'logo.png'
        MDLabel:
            text: "Login"
        MDTextFieldRound:
            id:emailw
            icon_left: 'email'
            foreground_color: 0.2,.2,.2,.9 
            icon_type: 'left'
            hint_text: 'Email' 


        MDTextFieldRound:
            id: passw
            icon_left: 'lock'
            icon_type: 'left'
            hint_text: 'Password'
            foreground_color: 0.2,.2,.2,.9 

        MDRectangleFlatIconButton:
            text: "Sign In"
            icon: "language-python"
            width: dp(230)
            pos_hint: {'center_x': .5}
            on_release:
                root.checkCred()

        MDRectangleFlatIconButton:
            text: "Create New Account"
            icon: "language-python"
            width: dp(230)
            pos_hint: {'center_x': .5}
            on_release:
                app.root.current = "Nav"
            

                    

